<div class="container">
  <h1>ContactUs Page</h1>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
    {{input type="email" value=emailAddress  class="form-control" placeholder="Email" autofocus="autofocus"}}
  </div>
  <p></p>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
    {{textarea value=message class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7"  }}
  </div>
  <div style="width: 100px; margin-left: 380px;margin-top: 100px">
    <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'saveInvitation'}}>Submit</button>
  </div>
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
</div>